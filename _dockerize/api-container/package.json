{
  "name": "amavm-vdh-api",
  "version": "1.0.0",
  "description": "Node.js API for VDH apps",
  "author": "VDH Team",
  "scripts": {
    "start": "node --inspect=0.0.0.0 -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "build": "tsc"
  },
  "dependencies": {
    "express": "^4.17.1",
    "mongodb": "^3.3.3"
  },
  "devDependencies": {
    "@types/mongodb": "^3.3.6",
    "@types/node": "^12.11.7",
    "eslint": "^6.6.0",
    "eslint-plugin-import": "^2.18.2",
    "nodemon": "^1.19.4",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
